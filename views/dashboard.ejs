<div class="overflow-x-auto relative shadow-md sm:rounded-lg">
  <div class="container p-10 mx-auto max-w-screen-xl">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
              <th scope="col" class="py-3 px-3">
                  Subject
              </th>
              <th scope="col" class="py-3 px-3">
                  Status
              </th>
              <th scope="col" class="py-3 px-3">
                  Severity
              </th>
              <th scope="col" class="py-3 px-3">
                  Assigned To
              </th>
              <th scope="col" class="py-3 px-3">
                  Date Created
              </th>
              <!-- <th scope="col" class="py-3 px-6">
                  Action
              </th> -->
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i<tickets.length; i++) {%>
          <tr class="<%= i % 2 ? 'bg-gray-50 dark:bg-gray-700' : 'bg-white dark:bg-gray-900'%> border-b dark:border-gray-700">
              <th scope="row" class="py-4 px-3 font-medium text-gray-900 dark:text-white hover:dark:text-gray-400 hover:text-gray-400">
                <a href="/ticket/<%= tickets[i]._id%>"><%= tickets[i].subject.slice(0,50)%></a>
              </th>
              <td class="py-4 px-3">
                <%= tickets[i].status%>
              </td>
              <td class="py-4 px-3">
                <%= tickets[i].severity%>
              </td>
              <td class="py-4 px-3">
                <%= tickets[i].assignedTo%>
              </td>
              <td class="py-4 px-3">
                <%= tickets[i].createdAt.toUTCString().slice(5)%>
              </td>
              <!-- <td class="py-4 px-6">
                  <a href="/ticket/<%= tickets[i]._id%>" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">View</a>
              </td> -->
          </tr>
        <% } %>
      </tbody>
  </table>
  </div>
</div>




